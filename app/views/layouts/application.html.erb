<!DOCTYPE html>
<html>
  <head>
    <title>BookingSystem</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
<%= render "layouts/navbar" %>
<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show mb-0" role="aler">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-lable="Clse"></button>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-warning alert-dismissible fade show mb-0" role="aler">
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-lable="Clse"></button>
  </div>
<% end %>
  <div class="container-fluid">
  <%
=begin%>
 <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p> 
<%
=end%>
    <%= yield %>
  </div>
  </body>
</html>
